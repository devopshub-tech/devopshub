###########################
# Enviroment default vars #
###########################

# The port on which the API will listen.
API_PORT=8080
# IP address on which the API will bind.
API_ADDRESS="0.0.0.0"

# The environment mode of the application (e.g., development, production, test).
ENV_MODE="development"

# MongoDB connection URI.
DB_MONGO_URI="mongodb://devopshub:devopshub@localhost:27017/devopshubdb?retryWrites=true&w=majority"  # Required
# MongoDB database name.
DB_NAME="devopshubdb"
# MongoDB connection timeout in seconds.
DB_CONNECTION_TIMEOUT=10
# MongoDB server selection timeout in seconds.
DB_SERVER_SELECTION_TIMEOUT=30
# MongoDB maximum pool size.
DB_MAX_POOL_SIZE=100
# MongoDB minimum pool size.
DB_MIN_POOL_SIZE=1
# MongoDB read preference.
DB_READ_PREFERENCE=primary
# MongoDB write concern.
DB_WRITE_CONCERN=1
# MongoDB retry writes.
DB_RETRY_WRITES=true
# MongoDB read concern.
DB_READ_CONCERN=majority
# MongoDB write concern timeout in milliseconds.
DB_WRITE_CONCERN_TIMEOUT=10000
# MongoDB read timeout in milliseconds.
DB_READ_TIMEOUT=10000
# MongoDB heartbeat interval in seconds.
DB_HEARTBEAT_INTERVAL=10
# MongoDB health check wait time in seconds.
DB_HEALTH_TIMEOUT=5

# AMQP URI for the message queue.
QUEUE_URI="amqp://devopshub:devopshub@localhost:5672" # Required
# Queue health check wait time in seconds.
QUEUE_HEALTH_TIMEOUT=5

# Log level for the application's logger (e.g., info, warning, error).
LOG_LEVEL="info"
# Directory where log files will be stored.
LOG_DIR="logs"
# Whether to write log entries to files.
LOG_WRITE_FILE=true
# Levels for which separate log files will be created (comma-separated).
LOG_FILE_LEVELS="error,warning"
# Log format for console output (text or json).
LOG_FORMAT_CONSOLE="text"
# Log format for file output (text or json).
LOG_FORMAT_FILE="json"
# Whether to include caller information in log entries.
LOG_REPORT_CALLER=false
# Maximum size of a log file before rotation (in megabytes).
LOG_MAX_SIZE=100
# Maximum number of old log files to keep.
LOG_MAX_BACKUPS=3
# Maximum age of log files before deletion (in days).
LOG_MAX_AGE=30
# Whether to compress old log files.
LOG_COMPRESS=true
